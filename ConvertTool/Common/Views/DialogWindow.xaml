<Window
    x:Class="Common.Views.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Common.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    AllowsTransparency="True"
    Icon="{StaticResource WindowIcon}"
    Opacity="0.8"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Style/ImageSource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Template>
        <ControlTemplate>
            <Border
                Width="300"
                Height="200"
                Padding="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"
                CornerRadius="5"
                Opacity="{TemplateBinding Opacity}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DockPanel
                        x:Name="Header"
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        Background="Black"
                        LastChildFill="False"
                        MouseMove="Header_OnMouseMove">
                        <Image DockPanel.Dock="Left" Source="{StaticResource WindowIcon}" />
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Title}" />
                        <Button
                            Width="30"
                            Padding="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="✖"
                            DockPanel.Dock="Right"
                            Foreground="White"
                            IsCancel="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                        <Trigger Property="IsMouseCaptured" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button
                            Width="30"
                            Padding="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="_"
                            DockPanel.Dock="Right"
                            Foreground="White">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                        <Trigger Property="IsMouseCaptured" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DockPanel>
                    <ContentPresenter Grid.Row="1" />
                </Grid>
            </Border>
        </ControlTemplate>
    </Window.Template>
    <!-- <Grid> -->
    <!--     <TextBlock Text="密码错误" /> -->
    <!-- </Grid> -->
</Window>
